{
  "compilerOptions": {
    "declaration": true, // 生成相关的 ’.d.ts‘ 文件
    "declarationDir": "./dist/types", // '.d.ts' 文件的输出目录
    "jsx": "preserve"
  },
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": "true",
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules"]
}
